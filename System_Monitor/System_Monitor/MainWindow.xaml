<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:System_Monitor"
        xmlns:WPF_Indicator="clr-namespace:WPF_Indicator;assembly=WPF_Indicator" x:Class="System_Monitor.MainWindow"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        x:Name="RootWindow"
        Title="MainWindow" Height="450" Width="800" Background="Transparent" AllowsTransparency="True" WindowStyle="None">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <DockPanel Grid.Column="0" Grid.Row="0">
            <WPF_Indicator:Indicator Value="{Binding Memory1}" HorizontalAlignment="Center" VerticalAlignment="Top" MouseDown="Indicator_MouseDown"/>
        </DockPanel>
    </Grid>
</Window>
