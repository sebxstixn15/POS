<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Indicator_Test"
        xmlns:WPF_Indicator="clr-namespace:WPF_Indicator;assembly=WPF_Indicator" x:Class="Indicator_Test.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <DockPanel Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <WPF_Indicator:Indicator HorizontalAlignment="Left" VerticalAlignment="Top" 
                Value="{Binding ElementName=MySlider, Path=Value}" 
                Minimum="0" 
                Maximum="100"/>
        </DockPanel>
        <DockPanel Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Slider x:Name="MySlider" Minimum="0" Maximum="100" Width="175"  >
                
            </Slider>

            <TextBlock Text="{Binding ElementName=MyIndicator, Path=Angle, StringFormat='Winkel: {0:F0}°'}" 
               HorizontalAlignment="Center"/>
        </DockPanel>

    </Grid>
</Window>
