<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login_Test"
        xmlns:WFP_Login_Registration="clr-namespace:WFP_Login_Registration;assembly=WFP_Login_Registration" x:Class="Login_Test.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="1">
            <WFP_Login_Registration:Registration x:Name="RegisterView" Visibility="Visible" SwitchToLogin="OnSwitchToLogin"/>

        </DockPanel>
        <DockPanel Grid.Row="1">
            <WFP_Login_Registration:Login x:Name="LoginView" Visibility="Collapsed" SwitchToRegistration="OnSwitchToRegister"/>

        </DockPanel>
    </Grid>
</Window>
