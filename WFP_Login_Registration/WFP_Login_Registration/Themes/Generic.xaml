<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WFP_Login_Registration">
    <Style TargetType="{x:Type local:Registration}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Registration}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />

                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MaxWidth="200"></ColumnDefinition>
                            <ColumnDefinition Width="auto" ></ColumnDefinition>
                            <ColumnDefinition Width="auto" ></ColumnDefinition>
                            <ColumnDefinition Width="*" ></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <DockPanel Grid.Row="0" Grid.Column="0">
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top">Registration:</TextBlock>

                        </DockPanel>
                        <DockPanel Grid.Row="0" Grid.Column="4">

                            <Button  x:Name="PART_LOGIN" Content="Login" Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <TextBlock TextDecorations="Underline">
                                        <ContentPresenter />
                                        </TextBlock>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Foreground" Value="Navy" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="true">
                                                <Setter Property="Foreground" Value="Red" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </DockPanel>

                        <DockPanel  Grid.Row="1"  Grid.Column="1" >
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0, 0,20,0" >First Name:</TextBlock>
                        </DockPanel >
                        <DockPanel  Grid.Row="1"  Grid.Column="2">
                            <TextBox  VerticalAlignment="Center" HorizontalAlignment="Left" x:Name="first" MinWidth="50" MaxWidth="270" Width="270" Height="30" Text="{Binding First, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                        </DockPanel >
                        <DockPanel  Grid.Row="2"  Grid.Column="1" >
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0, 0,20,0" >Last Name:</TextBlock>
                        </DockPanel >
                        <DockPanel  Grid.Row="2"  Grid.Column="2">
                            <TextBox  VerticalAlignment="Center" HorizontalAlignment="Left" x:Name="last" MinWidth="50" MaxWidth="270" Width="270" Height="30" Text="{Binding Last, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                        </DockPanel >



                        <DockPanel  Grid.Row="3"  Grid.Column="1" >
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0, 0,20,0" >Email</TextBlock>
                        </DockPanel >
                        <DockPanel  Grid.Row="3"  Grid.Column="2">
                            <TextBox  VerticalAlignment="Center" HorizontalAlignment="Left" x:Name="Email" MinWidth="50" MaxWidth="270" Width="270" Height="30" Text="{Binding Email, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                        </DockPanel >

                        <DockPanel  Grid.Row="4"  Grid.Column="1" >
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0, 0,20,0" >Password</TextBlock>
                        </DockPanel >
                        <DockPanel  Grid.Row="4"  Grid.Column="2">
                            <PasswordBox  VerticalAlignment="Center" HorizontalAlignment="Left" x:Name="PART_PASSWORD" MinWidth="50" MaxWidth="270" Width="270" Height="30"></PasswordBox>
                        </DockPanel >
                        <DockPanel  Grid.Row="5"  Grid.Column="1" >
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0, 0,20,0" >Confirm Password</TextBlock>
                        </DockPanel >
                        <DockPanel  Grid.Row="5"  Grid.Column="2">
                            <PasswordBox  VerticalAlignment="Center" HorizontalAlignment="Left" x:Name="PART_PASSWORD_CONFIRM" MinWidth="50" MaxWidth="270" Width="270" Height="30"></PasswordBox>
                        </DockPanel >

                        <DockPanel  Grid.Row="6"  Grid.Column="1" >
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0, 0,20,0" >Address:</TextBlock>
                        </DockPanel >
                        <DockPanel  Grid.Row="6"  Grid.Column="2">
                            <TextBox  VerticalAlignment="Center" HorizontalAlignment="Left" x:Name="Address" MinWidth="50" MaxWidth="270" Width="270" Height="30" Text="{Binding Address, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                        </DockPanel >

                        <DockPanel  Grid.Row="7"  Grid.Column="2">
                            <Button  VerticalAlignment="Center" HorizontalAlignment="Left" Width="80" x:Name="SUBMIT_Button" Height="30">Submit</Button>
                            <Button  VerticalAlignment="Center" Margin="15, 0, 0, 0" Width="80" x:Name="RESET_Button" Height="30">Reset</Button>
                            <Button  VerticalAlignment="Center" HorizontalAlignment="Right" Width="80" x:Name="CANCEL_Button"  Height="30">Cancel</Button>
                        </DockPanel >

                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="{x:Type local:Login}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Login}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />

                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MaxWidth="200"></ColumnDefinition>
                            <ColumnDefinition Width="auto" ></ColumnDefinition>
                            <ColumnDefinition Width="auto" ></ColumnDefinition>
                            <ColumnDefinition Width="*" ></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <DockPanel Grid.Row="0" Grid.Column="0">
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top">Login: </TextBlock>
                            
                        </DockPanel>
                        <DockPanel Grid.Row="0" Grid.Column="4">
                            
                            <Button  x:Name="PART_LOGIN" Content="Registration" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <TextBlock TextDecorations="Underline">
                                <ContentPresenter />
                                    </TextBlock>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Foreground" Value="Navy" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="true">
                                            <Setter Property="Foreground" Value="Red" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            </Button>
                        </DockPanel>
                        
                        <DockPanel  Grid.Row="1"  Grid.Column="1" >
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0, 0,20,0" >Email</TextBlock>
                        </DockPanel >
                        <DockPanel  Grid.Row="1"  Grid.Column="2">
                            <TextBox  VerticalAlignment="Center" HorizontalAlignment="Left" x:Name="Email" MinWidth="50" MaxWidth="270" Width="270" Height="30" Text="{Binding Email, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                        </DockPanel >

                        <DockPanel  Grid.Row="2"  Grid.Column="1" >
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0, 0,20,0" >Password</TextBlock>
                        </DockPanel >
                        <DockPanel  Grid.Row="2"  Grid.Column="2">
                            <PasswordBox  VerticalAlignment="Center" HorizontalAlignment="Left" x:Name="PART_PASSWORD" MinWidth="50" MaxWidth="270" Width="270" Height="30"></PasswordBox>
                        </DockPanel >

                        <DockPanel  Grid.Row="3"  Grid.Column="2">
                            <Button  VerticalAlignment="Center" HorizontalAlignment="Left" x:Name="LOGIN_Button" MinWidth="50" MaxWidth="100" Width="270" Height="30"> Login</Button>
                        </DockPanel >

                    </Grid>
                    
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
