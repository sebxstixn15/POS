<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:RatingControl">
    <Style TargetType="{x:Type local:RatingControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:RatingControl}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />

                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*" ></ColumnDefinition>
                            <ColumnDefinition Width="*" ></ColumnDefinition>
                            <ColumnDefinition Width="*" ></ColumnDefinition>
                            <ColumnDefinition Width="*" ></ColumnDefinition>
                            <ColumnDefinition Width="*" ></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        
                                    <Image x:Name="pic1" Grid.Column="0" Grid.Row="0" Source="/RatingControl;component/resources/Star_selected.png" 
                                            Stretch="Uniform" >
                            
                        </Image>

                        <Image x:Name="pic2" Grid.Column="1" Grid.Row="0" Source="/RatingControl;component/resources/Star_unselected.png" 
                                Stretch="Uniform">
                        </Image>
                        <Image x:Name="pic3" Grid.Column="2" Grid.Row="0" Source="/RatingControl;component/resources/Star_unselected.png" 
                                Stretch="Uniform">
                        </Image>
                        <Image x:Name="pic4" Grid.Column="3" Grid.Row="0" Source="/RatingControl;component/resources/Star_unselected.png" 
                            Stretch="Uniform">
                        </Image>
                        <Image x:Name="pic5" Grid.Column="4" Grid.Row="0" Source="/RatingControl;component/resources/Star_unselected.png" 
                            Stretch="Uniform">
                            </Image>
                            <TextBlock x:Name="ratingTextBlock" Text="{Binding Rating, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="5" FontSize="100" ></TextBlock>
                        <Image x:Name="star_unselected" Visibility="Hidden" Source="/RatingControl;component/resources/Star_unselected.png"></Image>
                        <Image x:Name="star_selected" Visibility="Hidden" Source="/RatingControl;component/resources/Star_selected.png"></Image>
                    </Grid>
                    
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
